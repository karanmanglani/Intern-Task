extends layout

block content
  .form-container
    h2 Login to Your Account
    form#loginForm(action='/api/v1/users/login', method='POST')
      .form-group
        label(for='username') Username:
        input.input-field(type='text', name='username', id='username', required=true, placeholder="Enter your username")

      .form-group
        label(for='password') Password:
        input.input-field(type='password', name='password', id='password', required=true, placeholder="Enter your password")

      button.button-primary(type='submit') Login

    if alert
      p.alert= alert

  script(src='/js/login.js')
