extends layout

block content
  .landing-container
    h1 Welcome to the Preferences Sharing Interface

    // Pop-up Modal for permissions (will show automatically)
    .modal#permissionModal
      .modal-content
        h2 Permissions
        p Please provide your preferences for sharing the following information:

        // Email permission with explanation
        .form-group
          label(for="email") Allow Email Sharing:
          input#emailToggle(type="checkbox", name="email", value="true")
          p This data is required to send you account-related updates and notifications.

        // Phone permission with explanation
        .form-group
          label(for="phone") Allow Phone Sharing:
          input#phoneToggle(type="checkbox", name="phone", value="true")
          p This data will be used to send you verification codes and updates.

        // Address permission with explanation
        .form-group
          label(for="address") Allow Address Sharing:
          input#addressToggle(type="checkbox", name="address", value="true")
          p This data will help us verify your identity and provide personalized services.

        // Confirm and close modal
        .button-container
          button#confirmPreferences.button-primary Confirm Preferences
          button#closeModal.button-secondary Close

    // Sign-up form
    .form-container
      form(action="/api/v1/users/signup", method="POST")
        .form-group
          label(for="username") Username:
          input#username.input-field(type="text", name="username", required=true, placeholder="Choose a unique username")
          span#usernameFeedback

        .form-group
          label(for="name") Name:
          input#name.input-field(type="text", name="name", required=true)

        .form-group
          label(for="email") Email:
          input#email.input-field(type="email", name="email", required=true, placeholder="Provide a valid email address for updates")

        .form-group
          label(for="phone") Phone Number:
          input#phone.input-field(type="text", name="phone", placeholder="Enter phone number for verification (if enabled)")

        .form-group
          label(for="address") Address:
          input#address.input-field(type="text", name="address", placeholder="Enter your address (if enabled)")

        .form-group
          label(for="password") Password:
          input#password.input-field(type="password", name="password", required=true)

        .form-group
          label(for="passwordConfirm") Confirm Password:
          input#passwordConfirm.input-field(type="password", name="passwordConfirm", required=true)

        .form-group
          button#submitButton.button-primary(type="submit", disabled=true) Sign Up

    // Include external JS file for modal behavior and form handling
    script(src='/js/signup.js')
